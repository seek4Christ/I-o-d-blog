
<%= form_for ([ @articles_path,  @article.comments.build]) do |f| %>
<div class="form-group">
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </div>

<div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

<div class="actions">
    <%= f.submit  %>
  </div>
<% end %>
